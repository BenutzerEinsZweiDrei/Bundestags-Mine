<div class="global-search">
    @*header*@
    <div class="bg-lightgray p-3 header">
        @*searchbox*@
        <div class="flexed">
            <input class="form-control w-100 rounded-0 global-search-input" type="text" placeholder="Suchbegriff" />
            <button class="btn btn-warning rounded-0 global-search-start-btn">
                <i class="fas fa-search"></i>
            </button>
        </div>
        @*filter*@
        <div class="flexed align-items-center mt-2 global-search-filter">
            <h4 class="mb-0 mt-0 mr-2"><i class="text-dark font-weight-bold fas fa-filter"></i></h4>
            <div class="flexed justify-content-around align-items-center w-100 flex-wrap">
                @*speeches*@
                <div class="flexed align-items-baseline" data-expanded="true" data-toggle="popover" data-content="Reden durchsuchen" data-trigger="hover">
                    <h6 class="mb-0 mt-0 mr-2"><i class="fas fa-comments"></i></h6>
                    <input type="checkbox" checked data-id="speeches" />
                </div>
                @*Speakers*@
                <div class="flexed align-items-baseline" data-expanded="true" data-toggle="popover" data-content="Redner(innen) durchsuchen" data-trigger="hover">
                    <h6 class="mb-0 mt-0 mr-2"><i class="fas fa-user"></i></h6>
                    <input type="checkbox" data-id="speakers" />
                </div>
                @*Agenda Items*@
                <div class="flexed align-items-baseline" data-expanded="true" data-toggle="popover" data-content="Tagesordnungspunkte durchsuchen" data-trigger="hover">
                    <h6 class="mb-0 mt-0 mr-2"><i class="fas fa-exclamation"></i></h6>
                    <input type="checkbox" data-id="agendaItems" />
                </div>
                @*Polls*@
                <div class="flexed align-items-baseline" data-expanded="true" data-toggle="popover" data-content="Abstimmungen durchsuchen" data-trigger="hover">
                    <h6 class="mb-0 mt-0 mr-2"><i class="fas fa-poll"></i></h6>
                    <input type="checkbox" data-id="polls" />
                </div>
                @*From*@
                <div class="flexed align-items-baseline" data-expanded="true" data-toggle="popover" data-content="Von-Datum" data-trigger="hover">
                    <h6 class="mb-0 mt-0 mr-2"><i class="fas fa-hourglass-start"></i></h6>
                    <input type="date" data-id="from" class="form-control rounded-0" />
                </div>
                @*To*@
                <div class="flexed align-items-baseline" data-expanded="true" data-toggle="popover" data-content="Bis-Datum" data-trigger="hover">
                    <h6 class="mb-0 mt-0 mr-2"><i class="fas fa-hourglass-end"></i></h6>
                    <input type="date" data-id="to" class="form-control rounded-0" />
                </div>
            </div>
        </div>
    </div>
    @*divider*@
    <hr class="mt-0 mb-0" />
    @*Results*@
    <div>
        <div class="p-3 flexed justify-content-between align-items-center">
            <h5 class="m-0 text-dark">Suchergebnisse:</h5>
            <h5 class="m-0"><span>2021-01-01</span> <i class="fas fa-long-arrow-alt-right"></i> <span>2022-01-01</span></h5>
        </div>
        <hr class="mt-0 mb-0"/>

        @*tabs to switch views*@
        <div class="flexed justify-content-around align-items-center tabs">
            <button class="btn rounded-0 btn-secondary w-100" data-id="speeches">Reden</button>
            <button class="btn rounded-0 btn-secondary w-100" data-id="speakers">Redner(innen)</button>
            <button class="btn rounded-0 btn-secondary w-100" data-id="agendaItems">TOP</button>
            <button class="btn rounded-0 btn-secondary w-100" data-id="polls">Abstimmungen</button>
        </div>

        @*result contents that shows the search results*@
        <div class="results">
            <div class="result-content" data-id="speeches"></div>
            <div class="result-content" data-id="speakers"></div>
            <div class="result-content" data-id="agendaItems"></div>
            <div class="result-content" data-id="polls"></div>
        </div>
    </div>

</div>